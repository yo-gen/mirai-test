<h1> Search Form </h1>

<h2><%= link_to "Add User", add_user_path %></h2>

<%= form_tag list_user_path, :method => 'get' do %>
  <p>
    <%= label_tag :search_by %>
    </br></br>
    <% [ 'id', 'name', 'pincode' ].each do |search_by| %>
      <%= radio_button_tag 'search_by', search_by %>
      <%= search_by.humanize %>
    <% end %>
    </br></br>
    <%= label_tag :search_text %>
    </br></br>
    <%= text_field_tag :search_text, params[:search_text] %>
    </br></br>    
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>